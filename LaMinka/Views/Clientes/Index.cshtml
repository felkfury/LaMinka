@model IEnumerable<LaMinka.Logica.Model.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h4>Listado de Clientes</h4>
<div class="card">
    <div class="card-body">

        <table id="table_id" style="width:100%" class="table table-striped table-bordered dt-responsive nowrap">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayName("Nombre")
                    </th>

                    <th>

                        @Html.DisplayName("Apellido")
                    </th>

                    <th>
                        @Html.DisplayName("Email")
                    </th>

                    <th>
                        @Html.DisplayName("Domicilio")
                    </th>

                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Apellido)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>

                        @foreach (var i in item.ClienteDomicilio.Where(x => x.Activo == true && x.EsPrincipal == true))
                        {

                            <td>
                                @Html.DisplayFor(modelItem => i.Calle)
                                @Html.DisplayFor(modelItem => i.Numero)
                                @Html.DisplayFor(modelItem => i.Localidad)
                            </td>

                        }

                        <td>

                            <a asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts{

    <script>
        $(document).ready(function () {
            $('#table_id').DataTable();

        });
    </script>

}