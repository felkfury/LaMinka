@model IEnumerable<LaMinka.Logica.Model.User>

@{
    ViewData["Title"] = "Index";
}

<h4>Listado de Usuarios</h4>
<div class="card">
    <div class="card-body">
        <p>

            <a asp-action="Create" type="button" class="btn btn-outline-primary mt-4">
                Crear Usuario
            </a>
        </p>

        <table id="table_id" style="width:100%" class="table table-striped table-bordered dt-responsive nowrap">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayName("Nombre")
                    </th>
                    <th>

                        @Html.DisplayName("Apellido")
                    </th>

                    <th>
                        @Html.DisplayName("Contraseña")
                    </th>
                    <th>
                        @Html.DisplayName("Email")
                    </th>

                    <th>
                        Acciones
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Password)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>

                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-user-edit"></i></a>

                            <a onclick=Delete(`Users/Delete/${@item.Id}`)><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts{

    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="~/js/Users.Index.js"></script>

}